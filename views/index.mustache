<!--Todo's index-->


<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Index : To Do's</title>
  </head>
  <body>
    <h1>List things!</h1>
    <form method="post" action:"/todos">
      <input type="text" name="description">
      <button type="submit">Add Something!</button>
    </form>
    <h3>List of Things:</h3>
    {{#todos}}
      <form method="post" action="/todos/delete/{{_id}}">
        <button type="submit">Delete</button>
      </form>
      <div>{{description}} - {{done}}</div>
    {{/todos}}
  </body>
</html>
